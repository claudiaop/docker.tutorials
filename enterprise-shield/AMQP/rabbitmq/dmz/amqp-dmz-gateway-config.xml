<?xml version="1.0" encoding="UTF-8" ?>
<gateway-config xmlns="http://xmlns.kaazing.org/2015/11/gateway">
  <service>
    <name>WS Proxy DMZ Gateway</name>
    <description>A DMZ proxy that forwards websocket connections</description>
    <accept>wss://kaazing.example.com:443/</accept>
    <connect>wss://internal.example.com:443/path2/</connect>

    <type>proxy</type>

    <connect-options>
       <http.transport>socks+ssl://kaazing.example.com:8001</http.transport>
       <socks.mode>reverse</socks.mode>
    </connect-options>
    
    <cross-site-constraint>
      <!-- Only websockets coming from this origin can access this url -->
      <allow-origin>https://kaazing.example.com:443/</allow-origin>
    </cross-site-constraint>
  </service>
  
  <service>
    <name>Http Proxy DMZ Gateway</name>
    <description>A DMZ that has no application logic that can be attacked</description>
    <accept>https://kaazing.example.com:443/</accept>
    <connect>https://internal.example.com/path1/</connect>

    <!-- NOTE: http.proxy is currently a BETA release -->
    <type>http.proxy</type>

    <connect-options>
       <http.transport>socks+ssl://kaazing.example.com:8001</http.transport>
       <socks.mode>reverse</socks.mode>
    </connect-options>
  </service>

  <service>
    <name>Http Redirect Service</name>
    <accept>http://kaazing.example.com:80/</accept>
    <type>http.redirect</type>
    <properties>
      <location>https://kaazing.example.com:443/</location>
      <cache-control>max-age=0</cache-control> 
      <status-code>301</status-code>
    </properties>
  </service>

  <security>
    <keystore>
      <type>JCEKS</type>
      <file>keystore.db</file>
      <password-file>keystore.pw</password-file>
    </keystore>
    <truststore>
      <type>JCEKS</type>
      <file>truststore.db</file>
    </truststore>
  </security>

</gateway-config>
