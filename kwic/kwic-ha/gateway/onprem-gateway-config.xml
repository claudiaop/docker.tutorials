<?xml version="1.0" encoding="UTF-8" ?>
<gateway-config xmlns="http://xmlns.kaazing.org/2016/06/gateway">


  <properties>

    <property>
      <name>service-a-hostname</name>
      <value>a</value>
    </property>

    <property>
      <name>service-a-port</name>
      <value>5551</value>
    </property>

    <property>
      <name>service-b-hostname</name>
      <value>b</value>
    </property>

    <property>
      <name>service-b-port</name>
      <value>6661</value>
    </property>

    <property>
      <name>cloud-hostname</name>
      <value>cloud.example.com</value>
    </property>

    <property>
      <name>cloud-node1-hostname</name>
      <value>cloud1.example.com</value>
    </property>

    <property>
      <name>cloud-node2-hostname</name>
      <value>cloud2.example.com</value>
    </property>

    <property>
      <name>cloud-port</name>
      <value>443</value>
    </property>

  </properties>


  <service>
    <name>Service A Proxy to cloud1</name>

    <accept>pipe://${cloud-node1-hostname}</accept>
    <connect>tcp://${service-a-hostname}:${service-a-port}</connect>

    <type>proxy</type>

    <accept-options>
      <pipe.transport>socks://${service-a-hostname}</pipe.transport>
      <socks.mode>reverse</socks.mode>
      <socks.transport>ws://${cloud-node1-hostname}:${cloud-port}/${service-a-hostname}</socks.transport>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </accept-options>
  </service>


  <service>
    <name>Service A Proxy to cloud2</name>

    <accept>pipe://${cloud-node2-hostname}</accept>
    <connect>tcp://${service-a-hostname}:${service-a-port}</connect>

    <type>proxy</type>

    <accept-options>
      <pipe.transport>socks://${service-a-hostname}</pipe.transport>
      <socks.mode>reverse</socks.mode>
      <socks.transport>ws://${cloud-node2-hostname}:${cloud-port}/${service-a-hostname}</socks.transport>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </accept-options>
  </service>


  <service>
    <name>Service B Proxy</name>

    <accept>tcp://@eth0:${service-b-port}</accept>
    <connect>ws://${cloud-hostname}:${cloud-port}/${service-b-hostname}</connect>

    <type>proxy</type>

    <connect-options>
      <http.maximum.redirects>3</http.maximum.redirects>
      <ws.inactivity.timeout>55 seconds</ws.inactivity.timeout>
    </connect-options>
  </service>


</gateway-config>
